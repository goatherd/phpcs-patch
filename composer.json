{
    "name": "goatherd/phpcs-patch",
    "description": "Extension to php_codesniffer",
    "type": "patch",
    "require": {
        "squizlabs/php_codesniffer": ">=1.4.0,<1.6",
        "goatherd/patch-installer": "*"
    },
    "extra": {
        "patch-path": "squizlabs/php_codesniffer",
        "patch-files": [
            "CodeSniffer.php",
            "CodeSniffer/File.php",
            "CodeSniffer/Standards/Generic/Sniffs/Functions/CallTimePassByReferenceSniff.php"
        ]
    }
}
